<% var banner %>
<%- include('partials/header') %>
<%- include('partials/page_header') %>

<section id="slider">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <div id="slider-carousel" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <% for (let i = 0; i < banner.length; i++) { %>
                            <% if (i === 0) { %>
                                <li class="active" data-target="#slider-carousel" data-slide-to="<%= i %>"></li>
                            <% } else { %>
                                <li data-target="#slider-carousel" data-slide-to="<%= i %>"></li>
                            <% } %>
                        <% } %>
                    </ol>
                    <div class="carousel-inner">
                        <% banner.forEach((item, index) => { %>
                            <% if (index === 0) { %>
                                <div class="item active">
                                    <div class="col-sm-6">
                                        <h1><span><%= item.title[0] %></span><%= item.title.substring(1) %></h1>
                                        <h2><%= item.subtitle %></h2>
                                        <p><%= item.description %></p>
                                        <button type="button" class="btn btn-default get">Get it now</button>
                                    </div>
                                    <div class="col-sm-6">
                                        <img src="<%= item.img %>" class="girl img-responsive" alt=""/>
                                        <img src="<%= item.img_price %>" class="pricing" alt=""/>
                                    </div>
                                </div>
                            <% } else { %>
                                <div class="item">
                                    <div class="col-sm-6">
                                        <h1><span><%= item.title[0] %></span><%= item.title.substring(1) %></h1>
                                        <h2><%= item.subtitle %></h2>
                                        <p><%= item.description %></p>
                                        <button type="button" class="btn btn-default get">Get it now</button>
                                    </div>
                                    <div class="col-sm-6">
                                        <img src="<%= item.img %>" class="girl img-responsive" alt=""/>
                                        <img src="<%= item.img_price %>" class="pricing" alt=""/>
                                    </div>
                                </div>
                            <% } %>
                        <% }) %>
                    </div>
                    <a href="#slider-carousel" class="left control-carousel hidden-xs" data-slide="prev">
                        <i class="fa fa-angle-left"></i>
                    </a>
                    <a href="#slider-carousel" class="right control-carousel hidden-xs" data-slide="next">
                        <i class="fa fa-angle-right"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

<section>
    <div class="container">
        <div class="row">
            <div class="col-sm-12 padding-right">
                <div class="features_items"><!--features_items-->
                    <h2 class="title text-center">Products</h2>
                    <% for (let {id, title, price, img} of products) { %>
                        <div class="col-sm-4">
                            <div class="product-image-wrapper">
                                <div class="single-products">
                                    <div class="productinfo text-center">
                                        <img src="<%= img %>" alt=""/>
                                        <h2>$<%= price %></h2>
                                        <p><%= title %></p>
                                        <a class="btn btn-default add-to-cart" id="<%= id %>">
                                            <i class="fa fa-shopping-cart"></i>
                                            Add to cart
                                        </a>
                                    </div>
                                    <div class="product-overlay">
                                        <div class="overlay-content">
                                            <h2>$<%= price %></h2>
                                            <p><%= title %></p>
                                            <a class="btn btn-default add-to-cart" id="<%= id %>">
                                                <i class="fa fa-shopping-cart"></i>
                                                Add to cart
                                            </a>
                                        </div>
                                    </div>
                                </div>
                                <div class="choose">
                                    <ul class="nav nav-pills nav-justified">
                                        <li>
                                            <a class="add-to-wishlist" id="<%= id %>">
                                                <i class="fa fa-plus-square"></i>
                                                Add to wishlist
                                            </a>
                                        </li>
                                        <li>
                                            <a class="add-comment" id="<%= id %>">
                                                <i class="fa fa-comment"></i>
                                                Add comment
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</section>

<%- include('partials/page_footer') %>
<%- include('partials/footer') %>