<% var user %>

<%- include('partials/header') %>
<%- include('partials/page_header') %>

<section id="cart_items">
    <div class="container">
        <div class="breadcrumbs">
            <ol class="breadcrumb">
                <li><a href="/">Home</a></li>
                <li class="active">Account</li>
            </ol>
        </div>
        <div class="page-content page-container" id="page-content">
            <div class="padding">
                <div class="row container d-flex justify-content-center">
                    <div class="col-xl-6 col-md-12" style="padding: 0">
                        <div class="card user-card-full">
                            <div class="row m-l-0 m-r-0">
                                <div class="col-sm-4 bg-c-lite-green user-profile">
                                    <div class="card-block text-center text-white">
                                        <div class="m-b-25 rounded-circle">
                                            <label class="cursor-pointer">
                                                <input style="width: 0; height: 0" id="user_photo" type="file"
                                                       accept="image/*">
                                                <img width="120" height="120"
                                                     style="border-radius: 50%; object-fit: cover"
                                                     src=<%= user.img %>
                                                     alt=<%= user.name %>">
                                            </label>
                                        </div>
                                        <h6 class="f-w-600"><%= user.name %></h6>
                                        <p>ID: <%= user._id %></p>
                                    </div>
                                </div>
                                <div class="col-sm-8">
                                    <div class="card-block">
                                        <h6 class="m-b-20 p-b-5 b-b-default f-w-600">User information</h6>
                                        <div class="row">
                                            <div class="col-sm-6 m-b-20">
                                                <p class="m-b-10 f-w-600">Email</p>
                                                <h6 class="text-muted f-w-400"><%= user.email %></h6>
                                            </div>
                                            <div class="col-sm-6 m-b-20">
                                                <p class="m-b-10 f-w-600">Phone</p>
                                                <h6 class="text-muted f-w-400"><%= user.phone ? user.phone : ' - ' %></h6>
                                            </div>
                                            <div class="col-sm-6 m-b-20">
                                                <p class="m-b-10 f-w-600">Address</p>
                                                <h6 class="text-muted f-w-400"><%= user.address ? user.address : ' - ' %></h6>
                                            </div>
                                            <div class="col-sm-6 m-b-20">
                                                <p class="m-b-10 f-w-600">Telegram</p>
                                                <h6 class="text-muted f-w-400"><%= user.telegram ? user.telegram : ' - ' %></h6>
                                            </div>
                                        </div>
                                        <div style="display: flex; align-items: center">
                                            <a class="btn btn-default w-50" href="/account/exit" style="border-radius: 0">Exit
                                                <i class="fa fa-sign-out" style="margin-left: 10px"></i></a>
                                            <form action="/account/delete" method="post">
                                                <input type="hidden" name="id" value="<%= user.id %>">
                                                <button class="btn btn-danger w-50 delete-account" style="border-radius: 0; margin-left: 20px;">Delete account
                                                    <i class="fa fa-trash-o" style="margin-left: 10px"></i></button>
                                            </form>
                                        </div>

                                        <form action="/account/edit" method="post">
                                            <input type="hidden" name="id" value=<%= user._id %>>
                                            <button class="btn btn-warning">
                                                <i class="fa fa-edit" style="font-size: 16px;"></i>
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<%- include('partials/page_footer') %>
<script src="/js/profile.js"></script>
<%- include('partials/footer') %>